    <!-- Le styles -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  <script src="js/bootstrap.js"></script>
    <style type="text/css">
      body {
        padding-top: 120px;
        padding-bottom: 40px;
      }
    </style>
    <link href="css/bootstrap-responsive.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Dosis:600' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Homenaje' rel='stylesheet' type='text/css'>

    <script>
    function goBack()
      {
      window.history.back()
      }
    </script>
  </head>

  <body>
    <table class="logo formatcenter">
        <tr>
          <td style="padding-right:5%;"><button onclick="goBack()" class="pull-left btn_dropdown"><img id="back" src="img/glyphicons_224_chevron-left.png"></button></td>

           <td style="padding-left:auto; padding-right:auto;"><h1>VIEW CLOSET</h1></td>
          <td class="menuCol">
            <div class="btn-group menu">
            <button class="btn_dropdown" data-toggle="dropdown" id="menuBtn">
            <img id="menu" src="img/glyphicons_114_list.png">
            </button>
              <ul class="dropdown-menu pull-right setbackground" role="menu" aria-labelledby="dropdownMenu">
                <li class="rightMargin"><a tabindex="-1" href="/home"><img id="setting" src="img/glyphicons_020_home.png" class="rightMargin">HOME</a></li>
                <li class="divider"></li>
                <li class="rightMargin"><a tabindex="-1" href="/settings"><img id="setting" src="img/glyphicons_136_cogwheel.png" class="rightMargin">SETTINGS</a></li>
                <li class="divider"></li>
                <li class="rightMargin"><a tabindex="-1" href="/" onclick="logout2()"><img id="logout" src="img/glyphicons_388_exit.png" class="rightMargin">LOG OUT</a></li>
               </ul>
        </div>  
      </td>
        </tr>
    </table>

    <br>
    <div id="containersimg">
        <div id="wrapper" >
          {{#each tops_list}}
            <div class="square"><a href="/item"><img src="{{url}}"  class="expose" onclick="selectClosetItemTop('{{url}}')"></a></div>
            <div id="overlay"></div>
            {{/each}}
       </div>
    </div>
    
    <div id="containersimg">
        <div id="wrapper" >
          {{#each pants_list}}
            <div class="square"><a href="/item" ><img src="{{url}}"  class="expose2" onclick="selectClosetItemPant('{{url}}')"></a></div>
            <div id="overlay2"></div>
            {{/each}}
       </div>
    </div>

    <div id="containersimg">
        <div id="wrapper" >
          {{#each shoes_list}}
            <div class="square"><a href="/item" ><img src="{{url}}"  class="expose" onclick="selectClosetItemShoe('{{url}}')"></a></div>
            <div id="overlay"></div>
            {{/each}}
       </div>
    </div>

    <div id="containersimg">
        <div id="wrapper" >
          {{#each extra_list}}
            <div class="square"><a href="/item" ><img src="{{url}}"  class="expose" onclick="selectClosetItemExtra('{{url}}')"></a></div>
            <div id="overlay"></div>
            {{/each}}
       </div>
    </div>
      <div class="container formatcenter">
      <a href="/category" class="btn btncolor">ADD ITEM</a>
      <div>
      <br> <br>
      <div class="formatcenter">
          <p>&copy; Teleportation</p>
      </div>

      <script>
        function selectClosetItemTop(url) {
          console.log("URL " + url);
          localStorage.setItem("closetItem", url);
          localStorage.setItem("category", "tops");
          //window.location.href = "/item";
        };

        function selectClosetItemPant(url) {
          console.log("URL " + url);
          localStorage.setItem("closetItem", url);
          localStorage.setItem("category", "pants");
          //window.location.href = "/item";
        };

        function selectClosetItemShoe(url) {
          console.log("URL " + url);
          localStorage.setItem("closetItem", url);
          localStorage.setItem("category", "shoes");
          //window.location.href = "/item";
        };

        function selectClosetItemExtra(url) {
          console.log("URL " + url);
          localStorage.setItem("closetItem", url);
          localStorage.setItem("category", "extra");
          //window.location.href = "/item";
        };

      </script>
      <script src="/js/logout.js"></script>
  </body>
</html>
