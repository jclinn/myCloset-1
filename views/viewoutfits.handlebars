    </script>
  </head>

  <body>
    <table class="logo formatcenter">
        <tr>
          <td style="padding-right:5%;"><button onclick="goBack()" class="pull-left btn_dropdown"><img id="back" src="img/glyphicons_224_chevron-left.png"></button></td>

           <td style="padding-left:auto; padding-right:auto;"><h1>VIEW OUTFITS</h1></td>
          <td class="menuCol">
            <div class="btn-group menu">
            <button class="btn_dropdown" data-toggle="dropdown" id="menuBtn">
            <img id="menu" src="img/glyphicons_114_list.png">
            </button>
              <ul class="dropdown-menu pull-right setbackground" role="menu" aria-labelledby="dropdownMenu">
                <li class="rightMargin"><a tabindex="-1" href="/home"><img id="setting" src="img/glyphicons_020_home.png" class="rightMargin">HOME</a></li>
                <li class="divider"></li>
                <li class="rightMargin"><a tabindex="-1" href="/settings"><img id="setting" src="img/glyphicons_136_cogwheel.png" class="rightMargin">SETTINGS</a></li>
                <li class="divider"></li>
                <li class="rightMargin"><a tabindex="-1" href="/" onclick="logout2()"><img id="logout" src="img/glyphicons_388_exit.png" class="rightMargin">LOG OUT</a></li>
               </ul>
        </div>  
      </td>
        </tr>
    </table>

    <br>
    <div id= "containersimgLarge">
      <div id="wrapper">
          <div id="image_box" class="getImg container">
      {{#each outfits_list}}
        <div class="colsmall" onclick="selectURL('{{topurl}}','{{extraurl}}','{{panturl}}','{{shoeurl}}')">
          <img src="{{topurl}}" />
          <img src="{{extraurl}}" />
          <img src="{{panturl}}" />
          <img src="{{shoeurl}}" />
        </div>
    {{/each}}
    </div>
  </div>
</div>
          
          <br>
          <a href="/outfitsviewed" class="btn btncolor btnalign">VIEW</a>
     <div class="bottomfixed">
          <p>&copy; Teleportation</p>
      </div>
   
     <script>
      $(".colsmall").click(selectOutfit);

      function selectOutfit(topurl, extraurl, panturl, shoeurl) {
        $(this).toggleClass("selection");
      }

      function selectURL(topurl, extraurl, panturl, shoeurl) {
        
        var img1Val = topurl;
        console.log( "top url : " + img1Val);
        localStorage.removeItem("image1");
        localStorage.setItem("image1", img1Val);
        img1Val = extraurl;
        console.log( "top url 2: " + img1Val);
        localStorage.removeItem("image2");
        localStorage.setItem("image2", img1Val);
        img1Val = panturl;
        localStorage.removeItem("image3");
        localStorage.setItem("image3", img1Val);
        img1Val = shoeurl;
        localStorage.removeItem("image4");
        localStorage.setItem("image4", img1Val);
      
      }
     </script>
    <script src="/js/logout.js"></script>
