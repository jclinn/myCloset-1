  function validate(){
		      var un = document.pwsentform.username.value;
		      var valid = false;

		      var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

		      if(re.test(un)){
		          valid = true;
		      }

	              if(valid){
		          window.location.href = "/passwordsent";
		          return false;
		      }
		      else{
		          alert("Invalid e-mail or e-mail not registered user.");
		      }

		      document.pwsentform.username.value = "";
	     	      setTimeout("document.pwsentform.username.focus()", 25);
		      setTimeout("document.pwsentform.username.select()", 25);

		  }

